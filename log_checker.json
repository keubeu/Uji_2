const basePath = path.join(__dirname, 'logs');
const requiredLogs = [
  { name: "story_log.json", type: "story" },
  { name: "event_log.json", type: "event" },
  { name: "status_log.json", type: "status" },
  { name: "map_log.json", type: "map" },
  { name: "tracking_log.json", type: "tracking" },
  { name: "research_log.json", type: "research" },
  { name: "timeline_log.json", type: "timeline" },
  { name: "inventory_log.json", type: "inventory" }
];

function checkLogStatus(fileName) {
  const filePath = path.join(basePath, fileName.split("_")[0], fileName);
  if (!fs.existsSync(filePath)) return "missing";

  const content = fs.readFileSync(filePath, 'utf8');
  if (content.trim() === "") return "empty";

  try {
    if (fileName.endsWith(".json")) JSON.parse(content);
    return "valid";
  } catch {
    return "damaged";
  }
}
